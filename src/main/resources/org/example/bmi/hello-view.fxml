<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.bmi.HelloController" style="-fx-background-color: #e3f2fd; ">
  <padding>
    <Insets top="20" right="20" bottom="20" left="20"/>
  </padding>

  <!-- Weight Input -->
  <Label text="Weight (kg):" GridPane.columnIndex="0" GridPane.rowIndex="0" style="-fx-text-fill: #154360;"/>
  <TextField fx:id="weightInput" GridPane.columnIndex="1" GridPane.rowIndex="0"/>


  <!-- Height Input -->
  <Label text="Height (m):" GridPane.columnIndex="0" GridPane.rowIndex="1" style="-fx-text-fill: #154360;"/>
  <TextField fx:id="heightInput" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

  <!-- Calculate Button -->
  <Button text="Calculate BMI" onAction="#onCalculateBMI" GridPane.columnIndex="1" GridPane.rowIndex="2" style="-fx-text-fill: #154360; -fx-background-color: #85c1e9;" />

  <!-- BMI Result -->
  <Label fx:id="bmiResultLabel" text="BMI: " GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2" style="-fx-text-fill: #154360;"/>
  <Label fx:id="bmiStatusLabel" text="Status: " GridPane.columnIndex="0" GridPane.rowIndex="4" GridPane.columnSpan="2" style="-fx-text-fill: #154360;"/>

  <!-- Clear Button -->
  <Button text="Clear" onAction="#onClearFields" GridPane.columnIndex="1" GridPane.rowIndex="5" style="-fx-text-fill: #154360; -fx-background-color: #85c1e9;" />
</GridPane>